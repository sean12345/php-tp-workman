server
{
	listen 80;
	server_name antnest.clcw.com.cn test.antnest.clcw.com.cn;
	index index.php index.html index.htm;
	access_log /var/log/nginx/test.antnest.clcw.log;

	autoindex on;
	autoindex_exact_size off;
	autoindex_localtime on;

	location /transfer
	{
		root /alidata/www/ant_nest2;
	        if (!-e $request_filename){
		    rewrite ^/index.php(.*)$ /index.php?s=$1 last;
		    rewrite ^(.*)$ /index.php?s=$1 last;
		    break;
	        }
	}

	location /sms
	{
		root /alidata/www/ant_nest_sms;
	        if (!-e $request_filename){
		    rewrite ^/index.php(.*)$ /index.php?s=$1 last;
		    rewrite ^(.*)$ /index.php?s=$1 last;
		    break;
	        }
	}

	location /
	{
	    root /alidata/www/ant_nest;

	    #if (-f $request_filename) {
	    #       expires max;
	    #       break;
	    #}


	    if (!-e $request_filename){
		rewrite ^/index.php(.*)$ /index.php?s=$1 last;
		rewrite ^(.*)$ /index.php?s=$1 last;
		break;
	    }
	}

        location ~ .*\.(php|php5)?$
	{
	    if ( $request_uri ~ "^/transfer/" ){
		    root /alidata/www/ant_nest2;
	       
	    }

	    if ( $request_uri ~ "^/sms/" ){
		    root /alidata/www/ant_nest_sms;
	       
	    }

            root /alidata/www/ant_nest;

	    fastcgi_pass 127.0.0.1:9000;
	    fastcgi_index index.php;
	    include fastcgi.conf;
	    add_header request_uri $request_uri;

	    break;
	}

#	location ~ .*\.(php|php5)?$
#	{
#	    root /alidata/www/ant_nest;
#	    fastcgi_pass 127.0.0.1:9000;
#	    fastcgi_index index.php;
#	    include fastcgi.conf;
#	}




	location ~ .*\.(gif|jpg|jpeg|png|bmp|swf)$
	{
		 if (-f $request_filename) {
		  expires -1s;
		  break;
		  }
	}

	location ~ /\.ht{
	    deny all;
	}

}

